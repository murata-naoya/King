<h1> 購入履歴 </h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>購入者</th>
      <th>購入日</th>
      <th>お届け先</th>
      <th>購入枚数</th>
      <th>合計金額</th>
      <th>発送状況</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th><%= order.user.full_name(order.user) %></th>
      <th><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></th>
      <th><%= order.address_name %></th>
      <th><%= order.total_count %>枚</th>
      <th><%= order.total_price %>円</th>
      <th><% if order.delivery_status == 0 %>
              配送前
          <% elsif order.delivery_status == 1 %>
              配送中
          <% else order.delivery_status == 2 %>
              配送済み
          <% end %>
      </th>
      <th><%= link_to "詳細", order_path(order), :class => "btn btn-primary" %></th>
    </tr>
    <% end %>
  </tbody>
</table>
