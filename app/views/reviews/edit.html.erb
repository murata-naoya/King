<% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= @review.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h1>レビュー編集</h1>

<%= form_for(@review) do |f| %>
	<h4>本文</h4>
	<%= f.text_area :review, rows:'5', class: "form-control", placeholder: "コメントここに" %>
	<%= f.submit "更新" %>
<% end %>